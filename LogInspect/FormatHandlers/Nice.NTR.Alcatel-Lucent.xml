<?xml version="1.0"?>
<FormatHandler xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
               Name="Nice.NTR.Alcatel-Lucent" FileNamePattern="^Alcatel-Lucent-\d+-{Date}(_{Number}hr)?\.log$"
               DefaultNameSpace="Nice.NTR" SeverityColumn="Severity" TimeStampColumn="Date" DefaultColumn="Message">
  <AppendLineToPreviousPatterns />
  <AppendLineToNextPatterns />
  <DiscardLinePatterns>
    <string>{EmptyLine}</string>
  </DiscardLinePatterns>
  <Columns>
    <Column Name="Date" Type="DateTime" Format="yyyy-MM-dd HH:mm:ss.fff" Width="200" Alignment="Center" IsFilterItemSource="false">
      <InlineColoringRules />
    </Column>
    <Column Name="Severity" Width="100" Alignment="Center" IsFilterItemSource="true">
      <InlineColoringRules />
    </Column>
    <Column Name="Event" Width="150" IsFilterItemSource="true">
      <InlineColoringRules />
    </Column>
    <Column Name="Message" Width="600" IsFilterItemSource="false">
      <InlineColoringRules>
        <InlineColoringRule Pattern="(\[|')DR_S{Number}_B{Number}_TS{Number}(\]|')" Foreground="BlueViolet" Underline="false" Bold="false" Italic="true" />
        <InlineColoringRule Pattern="{Const}" Foreground="Brown" Underline="false" Bold="true" Italic="false" />
        <InlineColoringRule Pattern="\[{Number}\]" Foreground="CornflowerBlue" Underline="false" Bold="false" Italic="false" />
        <InlineColoringRule Pattern="(T|t)arget:? *{Number}" Foreground="CornflowerBlue" Underline="false" Bold="false" Italic="false" />
        <InlineColoringRule Pattern="(D|d)evice:? *{Number}" Foreground="CornflowerBlue" Underline="false" Bold="false" Italic="false" />
        <InlineColoringRule Pattern="CallState: \w+" Foreground="Chocolate" Underline="false" Bold="false" Italic="false" />
        <InlineColoringRule Pattern="\[SUCCESS\]" Foreground="Green" Underline="false" Bold="true" Italic="false" />
      </InlineColoringRules>
    </Column>
  </Columns>
  <Rules>
    <Rule Name="NTR Event" Discard="false">
      <Tokens>
        <Token Pattern="{Date} {Time}" Name="Date" />
        <Token Pattern=" " />
        <Token Pattern="{Severity}" Name="Severity" />
        <Token Pattern=" +" />
        <Token Pattern="\[" />
        <Token Pattern="[^\]]+" Name="Event" />
        <Token Pattern="\] " />
        <Token Pattern="{RestOfTheLine}" Name="Message" />
      </Tokens>
    </Rule>
    <Rule Name="CSTA Event" Discard="false">
      <Tokens>
        <Token Pattern="{Date} {Time}" Name="Date" />
        <Token Pattern=" " />
        <Token Pattern="{Severity}" Name="Severity" />
        <Token Pattern=" +" />
        <Token Pattern="CSTA EVENT" Name="Event" />
        <Token Pattern=" *- *" />
        <Token Pattern=".*" />
        <Token Pattern="Class \d+ - Type \d+" Name="Message" />
      </Tokens>
    </Rule>
    <Rule Name="NTR Message" Discard="false">
      <Tokens>
        <Token Pattern="{Date} {Time}" Name="Date" />
        <Token Pattern=" " />
        <Token Pattern="{Severity}" Name="Severity" />
        <Token Pattern=" +" />
        <Token Pattern="{RestOfTheLine}" Name="Message" />
      </Tokens>
    </Rule>
    <Rule Name="Default" Discard="false">
      <Tokens>
        <Token Pattern="{WholeLine}" Name="Message" />
      </Tokens>
    </Rule>
  </Rules>
  <EventColoringRules>
    <EventColoringRule Column="Severity" Pattern="ERROR" Background="OrangeRed" />
    <EventColoringRule Column="Severity" Pattern="WARN" Background="Orange" />
  </EventColoringRules>
</FormatHandler>