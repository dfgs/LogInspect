<?xml version="1.0"?>
<FormatHandler xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:xsd="http://www.w3.org/2001/XMLSchema" 
               Name="Nice.NTR.Archiving" FileNamePattern="^CyberTech\.ContentManager\.Archiving\.WindowsService-\d\d\d\d-\d\d-\d\d(_\d\dhr)?\.log$"
               DefaultNameSpace="Nice.NTR" SeverityColumn="Severity" TimeStampColumn="Date" DefaultColumn="Message">
  <AppendLineToPreviousPatterns>
    <string>^[^\[]</string>
  </AppendLineToPreviousPatterns>
  <AppendLineToNextPatterns />
  <DiscardLinePatterns>
    <string>^$</string>
  </DiscardLinePatterns>
  <Columns>
    <Column Name="Date" Type="DateTime" Format="yyyy-MM-dd HH:mm:ss.fff" Width="200" Alignment="Center" IsFilterItemSource="false">
      <InlineColoringRules />
    </Column>
    <Column Name="Severity" Width="100" Alignment="Center" IsFilterItemSource="true">
      <InlineColoringRules />
    </Column>
    <Column Name="Thread" Width="300" IsFilterItemSource="true">
      <InlineColoringRules />
    </Column>
    <Column Name="Message" Width="600" IsFilterItemSource="false">
      <InlineColoringRules>
        <InlineColoringRule Pattern="CVSKEY=\d+" Foreground="Green" Underline="false" Bold="true" Italic="false" />
        <InlineColoringRule Pattern="AudioFragment:\d+" Foreground="Olive" Underline="false" Bold="true" Italic="false" />
        <InlineColoringRule Pattern="([a-zA-Z]:\\|\\\\)[a-zA-Z0-9\.\-_]{1,}(\\[a-zA-Z0-9\-_()]{1,}){1,}[\$]{0,1}\.[\w]+" Foreground="Blue" Underline="true" Bold="false" Italic="false" />
        <InlineColoringRule Pattern="Error num=\d+" Foreground="Red" Underline="false" Bold="true" Italic="false" />
        <InlineColoringRule Pattern="Error = [^\.]+" Foreground="Red" Underline="false" Bold="true" Italic="false" />
        <InlineColoringRule Pattern="'[^']+'" Foreground="BlueViolet" Underline="false" Bold="false" Italic="false" />
        <InlineColoringRule Pattern="\d+(\.\d+)? ms" Foreground="Black" Underline="false" Bold="true" Italic="false" />
        <InlineColoringRule Pattern=" \d+ " Foreground="Black" Underline="false" Bold="true" Italic="false" />
        <InlineColoringRule Pattern="Connected|CorrectMediumFound" Foreground="RosyBrown" Underline="false" Bold="false" Italic="true" />
      </InlineColoringRules>
    </Column>
  </Columns>
  <Rules>
    <Rule Name="Event with thread" Discard="false">
      <Tokens>
        <Token Pattern="^\[" />
        <Token Pattern="\d\d\d\d-\d\d-\d\d \d\d:\d\d:\d\d\.\d+" Name="Date" />
        <Token Pattern=" *" />
        <Token Pattern="\w+" Name="Severity" />
        <Token Pattern=" *\] " />
        <Token Pattern="[^:]+" Name="Thread" />
        <Token Pattern=": " />
        <Token Pattern=".+" Name="Message" />
      </Tokens>
    </Rule>
    <Rule Name="Event without thread" Discard="false">
      <Tokens>
        <Token Pattern="^\[" />
        <Token Pattern="\d\d\d\d-\d\d-\d\d \d\d:\d\d:\d\d\.\d+" Name="Date" />
        <Token Pattern=" *" />
        <Token Pattern="\w+" Name="Severity" />
        <Token Pattern=" *\] *" />
        <Token Pattern=".+" Name="Message" />
      </Tokens>
    </Rule>
    <Rule Name="Default" Discard="false">
      <Tokens>
        <Token Pattern=".*" Name="Message" />
      </Tokens>
    </Rule>
  </Rules>
  <EventColoringRules>
    <EventColoringRule Column="Severity" Pattern="ERROR" Background="OrangeRed" />
    <EventColoringRule Column="Severity" Pattern="WARN" Background="Orange" />
  </EventColoringRules>
</FormatHandler>