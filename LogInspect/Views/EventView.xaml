<UserControl x:Class="LogInspect.Views.EventView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:LogInspect.Views"
			 xmlns:models="clr-namespace:LogInspectLib;assembly=LogInspectLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

	<UserControl.Resources>
		<DataTemplate DataType="{x:Type models:Property}">
			<TextBlock Text="{Binding Value}"/>
		</DataTemplate>
		<DataTemplate x:Key="propertyDataTemplate">
			<TextBlock Text="{Binding Value}"/>
		</DataTemplate>
	</UserControl.Resources>
	
	
	<DockPanel>
		<ScrollBar DockPanel.Dock="Right" Value="{Binding Position}" Maximum="{Binding Count}" SmallChange="1" LargeChange="{Binding PageSize}" ViewportSize="{Binding PageSize}"/>
		<ListView  ItemsSource="{Binding}" ScrollViewer.VerticalScrollBarVisibility="Hidden" PreviewMouseWheel="ListView_MouseWheel" PreviewKeyDown="ListView_PreviewKeyDown" >
			<ListView.ItemContainerStyle>
				<Style TargetType="{x:Type ListViewItem}">
					<Setter Property="Height" Value="24"/>
					<Setter Property="Margin" Value="0"/>
				</Style>
			</ListView.ItemContainerStyle>
			<ListView.View>
				<GridView views:GridViewColumns.ColumnsSource="{Binding Columns}" views:GridViewColumns.HeaderTextMember="Text" views:GridViewColumns.PropertyName="Text" >
					
				</GridView>
			</ListView.View>
			<ListView.ItemsPanel>
				<ItemsPanelTemplate>
					<StackPanel views:ItemsEvaluator.LogFileViewModel="{Binding}" views:ItemsEvaluator.ItemHeight="24"/>
				</ItemsPanelTemplate>
			</ListView.ItemsPanel>
		</ListView>
	</DockPanel>

</UserControl>
