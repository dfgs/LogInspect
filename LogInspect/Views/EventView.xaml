<UserControl x:Class="LogInspect.Views.EventView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:views="clr-namespace:LogInspect.Views"
			 xmlns:models="clr-namespace:LogInspectLib;assembly=LogInspectLib"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

	<UserControl.Resources>
		<DataTemplate DataType="{x:Type models:Property}">
			<TextBlock Text="{Binding Value}"/>
		</DataTemplate>
		<DataTemplate x:Key="propertyDataTemplate">
			<TextBlock Text="{Binding Value}"/>
		</DataTemplate>
	</UserControl.Resources>

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*"/>
			<RowDefinition Height="7"/>
			<RowDefinition Height="150"/>
		</Grid.RowDefinitions>
		<DockPanel Grid.Row="0">
			<views:ColumnsView DockPanel.Dock="Top" DataContext="{Binding Columns}"/>
			<ScrollViewer CanContentScroll="True" VerticalScrollBarVisibility="Auto">
				<views:EventPanel ItemsSource="{Binding}" ItemsCount="{Binding Count}" Columns="{Binding Columns}" VerticalOffset="{Binding Position,Mode=OneWayToSource}"/>
			</ScrollViewer>

		</DockPanel>
		<GridSplitter Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
		<ListBox Grid.Row="2" ItemsSource="{Binding ElementName=listView,Path=SelectedItem.Lines}"/>
	</Grid>
</UserControl>
